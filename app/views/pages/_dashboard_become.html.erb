<script>
document.addEventListener('DOMContentLoaded', function() {
  // Placeholder for graph initialization
  // Replace with actual graph implementation
  const ctx = document.getElementById('becomeGraph').getContext('2d');
  new Chart(ctx, {
    type: 'line',
    data: {
      labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
      datasets: [{
        label: 'Become Progress',
        data: [5, 10, 15, 20, 25, 30],
        borderColor: 'rgb(255, 99, 132)',
        tension: 0.1
      }]
    },
    options: {
      responsive: true,
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
